<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF9A8B"/> <!-- pink when pressed -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFFFF"/> <!-- solid white background -->
            <stroke android:width="2dp" android:color="#FF6F61"/> <!-- pink outline -->
            <corners android:radius="12dp" />
        </shape>
    </item>

</selector>