<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pinkbackground"
    tools:context=".GuestSettingsActivity">

    <!-- Back button -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:background="@android:color/transparent"
        android:contentDescription="Back"
        android:padding="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/baseline_arrow_back_24"
        app:tint="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Page Title -->
    <TextView
        android:id="@+id/settingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GUEST SETTINGS"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Main White Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/settingsCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="18dp"
        android:backgroundTint="#FFFFFF"
        app:cardCornerRadius="18dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/settingsTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="18dp">

                <!-- Section heading -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SETTINGS"
                    android:textStyle="bold"
                    android:textColor="#222222"
                    android:textSize="16sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="14dp"
                    android:background="#E0E0E0"/>

                <!-- User Information -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Information"
                    android:textStyle="bold"
                    android:textColor="#222222"
                    android:textSize="15sp"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/nameLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:textColor="#444444"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/nameValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="guest1"
                    android:textStyle="bold"
                    android:textColor="#222222"
                    android:textSize="14sp"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/emailLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email address:"
                    android:textColor="#444444"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/emailValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="guest@email.com"
                    android:textStyle="bold"
                    android:textColor="#222222"
                    android:textSize="14sp"
                    android:layout_marginBottom="14dp"/>

                <Button
                    android:id="@+id/resetPasswordButton"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:text="Reset Password"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/login_button"
                    android:backgroundTint="@null"
                    android:paddingHorizontal="18dp"
                    android:layout_marginBottom="18dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="14dp"
                    android:background="#E0E0E0"/>

                <!-- Notifications -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notifications"
                    android:textStyle="bold"
                    android:textColor="#222222"
                    android:textSize="15sp"
                    android:layout_marginBottom="8dp"/>

                <CheckBox
                    android:id="@+id/checkNewReservations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New reservations notification"
                    android:textColor="#333333"/>

                <CheckBox
                    android:id="@+id/checkReservationUpdates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reservation updates"
                    android:textColor="#333333"/>

                <CheckBox
                    android:id="@+id/checkMenuChanges"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Menu changes"
                    android:textColor="#333333"
                    android:layout_marginBottom="18dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="14dp"
                    android:background="#E0E0E0"/>

                <!-- App Settings -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="App settings"
                    android:textStyle="bold"
                    android:textColor="#222222"
                    android:textSize="15sp"
                    android:layout_marginBottom="8dp"/>

                <CheckBox
                    android:id="@+id/checkDarkMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dark mode"
                    android:textColor="#333333"/>

                <CheckBox
                    android:id="@+id/checkSoundAlerts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enable sound alerts"
                    android:textColor="#333333"
                    android:layout_marginBottom="20dp"/>

                <!-- Logout -->
                <Button
                    android:id="@+id/logoutButton"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:text="Logout"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/login_button"
                    android:backgroundTint="@null"
                    android:layout_marginTop="6dp"/>

            </LinearLayout>
        </ScrollView>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
