<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pinkbackground"
    tools:context=".StaffHomeActivity">

    <!-- Page Title -->
    <TextView
        android:id="@+id/pageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STAFF HOMEPAGE"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp" />

    <!-- Dashboard Section (Welcome + Notifications) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/dashboardCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="14dp"
        app:cardElevation="6dp"
        android:backgroundTint="#33FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/pageTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|space_between"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/profileIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/logo"
                    android:background="@drawable/circle_shape"
                    android:padding="8dp"
                    android:contentDescription="Staff Icon" />

                <TextView
                    android:id="@+id/welcomeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome, [ Staff 1 ]"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

            <Button
                android:id="@+id/notificationButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notifications (6)"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/notification_button_bg"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Menu Buttons Section -->
    <androidx.cardview.widget.CardView
        android:id="@+id/menuCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="14dp"
        app:cardElevation="6dp"
        android:backgroundTint="#33FFFFFF"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/dashboardCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:padding="16dp"
            android:alignmentMode="alignMargins"
            android:rowOrderPreserved="false"
            android:useDefaultMargins="true">

            <Button
                android:id="@+id/viewReservations"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="View Reservations"
                android:textColor="#FFFFFF"
                android:background="@drawable/dashboard_button_bg"
                android:layout_columnWeight="1"
                android:elevation="3dp" />

            <Button
                android:id="@+id/manageMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Manage Menu"
                android:textColor="#FFFFFF"
                android:background="@drawable/dashboard_button_bg"
                android:layout_columnWeight="1"
                android:elevation="3dp" />

            <Button
                android:id="@+id/settings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textColor="#FFFFFF"
                android:background="@drawable/dashboard_button_bg"
                android:layout_columnWeight="1"
                android:elevation="3dp" />

            <Button
                android:id="@+id/logout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textColor="#FFFFFF"
                android:background="@drawable/dashboard_button_bg"
                android:layout_columnWeight="1"
                android:elevation="3dp" />
        </GridLayout>
    </androidx.cardview.widget.CardView>

    <!-- Reservations Section -->
    <androidx.cardview.widget.CardView
        android:id="@+id/reservationsCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="14dp"
        app:cardElevation="6dp"
        android:backgroundTint="#33FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/menuCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/reservationsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reservations For The Day:"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_marginBottom="8dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#80FFFFFF"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/reservationList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Chinedu Isu - 6PM - Confirmed\n2. Dave J - 7PM - Pending"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_gravity="bottom"
        android:background="#334E00FF"
        android:elevation="8dp"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
