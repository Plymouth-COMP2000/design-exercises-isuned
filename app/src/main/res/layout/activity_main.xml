<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pinkbackground"
    tools:context=".MainActivity">

    <!-- Restaurant Title -->
    <TextView
        android:id="@+id/restaurantTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HQ Restaurant"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/logoImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <!-- LOGIN Label -->


    <TextView
        android:id="@+id/loginLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:text="Welcome"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/restaurantTitle" />

    <!-- staff button -->
    <Button
        android:id="@+id/staffButton"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:text="STAFF"
        android:textColor="#FFFFFF"
        android:textSize="20sp"

        android:background="@drawable/staff_button_bg"
        android:elevation="9dp"
        app:layout_constraintTop_toBottomOf="@id/loginLabel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp" />

    <!-- Guest Button -->
    <Button
        android:id="@+id/guestButton"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:text="GUEST"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:background="@drawable/guest_button_bg"
        android:elevation="9dp"
        app:layout_constraintTop_toBottomOf="@id/loginLabel"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="30dp" />



</androidx.constraintlayout.widget.ConstraintLayout>


